<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThankYouActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="8"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/home"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/applogo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:text="LOVE MOVIE"
                android:fontFamily="@font/font_family"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="3">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:src="@drawable/checked" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bạn đã đặt vé thành công. Cảm ơn bạn đã ủng hộ."
                android:textSize="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/font_family"
                android:gravity="center"
                android:textColor="#2e2e2e" />


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="3">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thông tin đặt vé"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/font_family"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#2e2e2e" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoSeat"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="4"
            >
            <!-- Display the received data -->
            <TextView
                android:id="@+id/thankYouFilmTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Film: Inception"
                android:textSize="18sp"
                android:fontFamily="@font/font_family"
                android:gravity="center"
                android:textColor="#2e2e2e" />

            <TextView
                android:id="@+id/thankYouDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: SAT 13"
                android:textSize="18sp"
                android:gravity="center"
                android:fontFamily="@font/font_family"
                android:textColor="#2e2e2e" />

            <TextView
                android:id="@+id/thankYouTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_family"
                android:text="Time: 12:30 AM"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#2e2e2e" />

            <TextView
                android:id="@+id/thankYouTheatre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theatre: CGV"
                android:fontFamily="@font/font_family"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#2e2e2e" />

            <TextView
                android:id="@+id/thankYouSeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seats: B5, C5, D4, D5"
                android:fontFamily="@font/font_family"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#2e2e2e" />
            <ImageView
                android:id="@+id/qrCodeImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_below="@id/infoSeat"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
           >

            <Button
                android:id="@+id/toHome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Back Home"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:fontFamily="@font/font_family"
                android:textAlignment="center"
                android:backgroundTint="#3062EF"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
